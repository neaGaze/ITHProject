<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutEmployee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.62"
        android:background="#dddddd"
        android:orientation="vertical" >

        <!-- For Name -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewEmployeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/employeeName"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000088"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- For Gender -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewEmployeeGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/employeeGender"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000066"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/editTextEmployeeGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/customview"
                android:ems="10"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:text="Gender"
                android:textColor="#ffffff"
                android:textSize="15dp" >
            </TextView>
        </LinearLayout>

        <!-- For HomePhone -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewEmployeeHomePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/employeeHomePhone"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000066"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/editTextEmployeeHomePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/customview"
                android:ems="10"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:text="@string/employeeHomePhone"
                android:textColor="#ffffff"
                android:textSize="15dp" >
            </TextView>
        </LinearLayout>

        <!-- For Mobile -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewEmployeeMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/employeeMobile"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000066"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/editTextEmployeeMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/customview"
                android:ems="10"
                android:gravity="left"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:text="@string/employeeMobile"
                android:textColor="#ffffff"
                android:textSize="15dp" >
            </TextView>
        </LinearLayout>

        <!-- For Email -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewEmployeeEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/employeeEmail"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000066"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/editTextEmployeeEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/customview"
                android:ems="10"
                android:gravity="left"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:text="@string/employeeEmail"
                android:textColor="#ffffff"
                android:textSize="15dp" >
            </TextView>
        </LinearLayout>

        <!-- For Address -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewEmployeeAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/employeeAddress"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000066"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/editTextEmployeeAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/customview"
                android:ems="10"
                android:gravity="left"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:text="@string/employeeAddress"
                android:textColor="#ffffff"
                android:textSize="15dp" >
            </TextView>
        </LinearLayout>

        <!-- For Designation -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewEmployeeDesignation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/employeeDesignation"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000066"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/editTextEmployeeDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/customview"
                android:ems="10"
                android:gravity="left"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:text="@string/employeeDesignation"
                android:textColor="#ffffff"
                android:textSize="15dp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutAddMessage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.62"
        android:background="@drawable/border"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewMessageTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/MessageTo"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000077"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5dp"
                android:layout_marginTop="2dip"
                android:addStatesFromChildren="true"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" >

                <EditText
                    android:id="@+id/editTextMessageTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textSize="15dp" />

                <ImageButton
                    android:id="@+id/imageButtonEmployeeSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:layout_marginTop="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/search" />
                
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayoutEmployeesSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewMessageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/MessageTitle"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000077"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editTextMessageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:paddingLeft="10dp"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewMessageDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/MessageDesc"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000077"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editTextMessageDesc"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp" >
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/buttonMessageSubmit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/MessageSubmit"
            android:textColor="#000077"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>